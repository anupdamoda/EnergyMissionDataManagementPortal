@model IEnumerable<UsersinRolesViewModel>
<center><h2>Roles Management</h2></center>
<a asp-controller="App" asp-action="Home"> &lt; Go Back</a>
<br />
<br />
<button class="btn btn-dark"><a asp-controller="Account" asp-action="NewRegistration" class="nav-link" style="color:aqua">Add Roles</a></button>
<br />
<br />
<div>
    <center>
        <form asp-action="RolesManagement" method="get">
            <div class="form-actions no-color">
                <p>
                    Search by <b>UserName</b> or <b>Email id</b>: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-info" /> |
                    <a asp-action="RolesManagement">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-striped table-bordered" style="margin-left:30px;margin-right:30px; margin-left:30px">
            <thead class="thead-dark">
                <tr>
                    <th> UserName </th>
                    <th> Email address </th>
                    <th> Role </th>
                    <th style="color:darkcyan"> Update </th>
                    <th style="color:darkcyan"> Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                <tr>
                    <td>  @p.Username </td>
                    <td>  @p.Email </td>
                    <td>  @p.Role </td>
                    @*<td>
                        @Html.ActionLink("Enable", "Enable", new { id = p.UserId })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = p.UserId })
                    </td>*@
                </tr>
                }
            </tbody>
        </table>
    </center>
</div>