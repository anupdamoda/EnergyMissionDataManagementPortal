@model IEnumerable<CustAccntCode>
<center><h2>CAC Management</h2></center>
<a asp-controller="App" asp-action="Home"> &lt; Go Back</a>
<br />
<br />
<p>CAC Count: @Model.Count()</p>
<button class="btn btn-dark"><a asp-controller="CAC" asp-action="NewCAC" class="nav-link" style="color:aqua">Add CAC</a></button>
<br />
<br />
<div>
    <center>
        <form asp-action="CACManagement" method="get">
            <div class="form-actions no-color">
                <p>
                    Search by <b>Contract ID</b> or <b>NMI</b> or <b>Order Number</b>: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-info" /> |
                    <a asp-action="CACManagement">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-striped table-bordered" style="margin-left:30px;margin-right:30px; margin-left:30px">
            <thead class="thead-dark">
                <tr>
                    <th> Customer Account Code (CAC) </th>
                    <th> NMI (National Meter Identifier) </th>
                    <th> Used For Contract </th>
                    <th style="color:darkcyan"> Update </th>
                    <th style="color:darkcyan"> Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                <tr>
                    <td>  @p.CAC_number </td>
                    <td>  @p.nmi_number </td>
                    <td>  @p.UsedForContract </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = p.CAC_id })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = p.CAC_id })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </center>
</div>