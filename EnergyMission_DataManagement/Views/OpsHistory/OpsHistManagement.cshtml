@model IEnumerable<OperationsHistory>
<center><h2>Operations History Management</h2></center>
<a asp-controller="App" asp-action="Home"> &lt; Go Back</a>
<br />
<br />
<br />
<br />
<div>
    <center>
        <form asp-action="OpsHistManagement" method="get">
            <div class="form-actions no-color">
                <p>
                    Search by  <b>Contract</b> or <b>NMI</b> or <b>CAC</b> or <b>Last updated by</b>: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-info" /> |
                    <a asp-action="OpsHistManagement">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-striped table-bordered" style="margin-left:30px;margin-right:30px; margin-left:30px">
            <thead class="thead-dark">

                <tr>
                    <th> NMI </th>
                    <th> Contract </th>
                    <th> CAC </th>
                    <th> Operation </th>
                    <th> Created / Edited on/at </th>
                    <th> Last Updated by</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                <tr>
                    <td> @p.nmi_number </td>
                    <td> @p.contract_number </td>
                    <td> @p.cac_number </td>
                    <td> @p.operation </td>
                    <td> @p.updated_at </td>
                    <td> @p.lastupdatedby </td>
                </tr>
                }
            </tbody>
        </table>
    </center>
</div>