@model NewRestgnViewModel
@{
    ViewBag.Title = "Registration Page";
}
@section Scripts {
<script src="~/lib/jquery/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="col-md-4 col-lg-6 col-xs-12">
                    <label asp-for="FirstName">First Name:</label>
                    <input asp-for="FirstName" type="text" class="form-control">
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-lg-6 col-xs-12">
                    <label asp-for="LastName">Last Name:</label>
                    <input asp-for="LastName" type="text" class="form-control">
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-lg-6 col-xs-12">
                    <label asp-for="Email">Email Address:</label>
                    <input asp-for="Email" type="email" class="form-control">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-lg-6 col-xs-12">
                    <label asp-for="UserName">Username:</label>
                    <input asp-for="UserName" type="text" class="form-control">
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-lg-12 col-xs-12">
                    <label asp-for="Password">Password:</label>
                    <input name="Password" type="password" class="form-control">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-lg-12 col-xs-12">
                    <label asp-for="ContactNo">Contact Number:</label>
                    <input name="ContactNo" type="number" class="form-control">
                    <span asp-validation-for="ContactNo"></span>
                </div>
            </div>
            <br>
            <div class="col-md-12 col-lg-12 col-xs-12">
                <button type="submit" class="btn btn-warning">Submit</button>
                <div>@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>